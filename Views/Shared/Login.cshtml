@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fce4ec; /* Rosa suave */
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background: #fff;
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

            .login-container h2 {
                text-align: center;
                color: #880e4f;
                margin-bottom: 25px;
                font-weight: bold;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
            color: #d81b60;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ec407a;
        }

        .btn-pink {
            background-color: #ec407a;
            color: white;
            width: 100%;
            padding: 10px;
            font-weight: bold;
            border: none;
            border-radius: 30px;
            transition: background-color 0.3s ease;
        }

            .btn-pink:hover {
                background-color: #d81b60;
                color: #ffebee;
            }

        .error-message {
            color: red;
            text-align: center;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Iniciar Sesión</h2>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label for="username" class="form-label">Usuario:</label>
                @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Tu nombre de usuario" })
            </div>
            <div class="form-group">
                <label for="password" class="form-label">Contraseña:</label>
                @Html.Password("password", null, new { @class = "form-control", placeholder = "Tu contraseña" })
            </div>
            <button type="submit" class="btn btn-pink">Ingresar</button>
        }

        @if (ViewBag.Error != null)
        {
            <p class="error-message">@ViewBag.Error</p>
        }
    </div>
</body>
</html>