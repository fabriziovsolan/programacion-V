@{
    ViewBag.Title = "Formulario de Usuarios";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulario Usuario</title>
    <h2 style="color:cadetblue;text-align: center; font-family: 'Bodoni MT Black', sans-serif;">
        Complete los siguientes datos:
    </h2>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
        background-color: #fce4ec;
        font-family: 'Arial', sans-serif;
        padding: 40px;
        }

        .form-container {
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: auto;
        margin-bottom: 40px;
        }

        .form-label {
        font-weight: bold;
        color: #4fff;
        }

        .form-control {
        border-radius: 8px;
        border: 1px solid #9898;
        margin-bottom: 15px;
        }

        .btn-pink {
        background-color: #9898;
        color: white;
        width: 100%;
        padding: 10px;
        font-weight: bold;
        border: none;
        border-radius: 30px;
        transition: background-color 0.3s ease;
        }

        .btn-pink:hover {
        background-color: #9898;
        color: #ffebee;
        }

        .table-container {
        max-width: 800px;
        margin: auto;
        }

        table {
        width: 100%;
        border-collapse: collapse;
        }

        table th,
        table td {
        padding: 12px;
        border: 1px solid #3434;
        text-align: center;
        }

        table th {
        background-color: #f8bbd0;
        color: #3434;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <form asp-controller="Usuario" asp-action="AltaUsuario" method="get">
            <div class="form-group">
                <label class="form-label">Username:</label>
                <input type="text" name="username" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Password:</label>
                <input type="password" name="password" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Email:</label>
                <input type="text" name="email" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Name:</label>
                <input type="text" name="name" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Fecha Nacimiento:</label>
                <input type="text" name="fechanacimiento" class="form-control" placeholder="AAAA/MM/DD" />
            </div>

            <button type="submit" class="btn btn-pink">Cargar y obtener Usuarios</button>
        </form>
</body>
</html>


@if (ViewBag.Mensaje != null)
{
    <h3 style="color:cadetblue;font-family: 'Bodoni MT Black'">@ViewBag.Mensaje </h3>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center mt-4" style="background-color: #f8bbd0; color: #4fff; border: 1px solid #9898; border-radius: 10px; font-family: 'Bodoni MT Black';">
        <h5>⚠️ Error de autenticación</h5>
        <p>@ViewBag.Error</p>
    </div>
}