@model List<MvcMovie1.Models.UsuarioModel>

@{
    ViewBag.Title = "Listado de Usuarios";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Listado de Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fff3f3;
            font-family: 'Arial', sans-serif;
            padding: 40px;
        }

        .table-container {
            background: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(229, 57, 53, 0.08);
            max-width: 1000px;
            margin: auto;
        }

        h2 {
            text-align: center;
            color: #e53935;
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

            table th, table td {
                padding: 12px;
                border: 1px solid #ffcdd2;
                text-align: center;
            }

            table th {
                background-color: #ffcdd2;
                color: #b71c1c;
            }

        /* Botón Editar */
        .btn-editar {
            background-color: #1976d2;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 20px;
            padding: 6px 12px;
        }

            .btn-editar:hover {
                background-color: #0d47a1;
                color: #fff3f3;
            }

        /* Botón Eliminar */
        .btn-eliminar {
            background-color: #e53935;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 20px;
            padding: 6px 12px;
        }

            .btn-eliminar:hover {
                background-color: #b71c1c;
                color: #ffcdd2;
            }

        .btn-pink {
            background-color: #ec407a;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 20px;
            padding: 6px 12px;
        }

            .btn-pink:hover {
                background-color: #d81b60;
                color: #fff3f3;
            }

        .btn-danger {
            border-radius: 20px;
        }

        .btn-primary {
            border-radius: 20px;
        }

    </style>
</head>
<body>

    <div class="table-container">
        <h2 style="color:cadetblue;text-align: center; font-family: 'Bodoni MT Black', sans-serif;">Listado de Usuarios</h2>

        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Nombre</th>
                <th>Fecha Nac.</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.id</td>
                    <td>@usuario.username</td>
                    <td>@usuario.name</td>
                    <td>@usuario.fechanacimiento.ToString("yyyy/MM/dd")</td>
                    <td>@usuario.email</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@usuario.id" class="btn btn-sm btn-editar">Editar</a>

                        <form asp-action="Eliminar" method="post" asp-route-id="@usuario.id" style="display:inline;"
                              onsubmit="return confirm('¿Estás seguro que querés eliminar este usuario?');">
                            <button type="submit" class="btn btn-sm btn-eliminar">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>

</body>
</html>
